{
  "name": "wavlpf",
  "version": "1.0.0",
  "description": "Simple software synthesizer with LPF filter",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:wasm && tsc && vite build",
    "build:wasm": "cd wasm-audio && wasm-pack build --target web --release",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "serve": "vite preview",
    "postinstall": "node scripts/setup-cat-oscilloscope-wasm.js",
    "verify-deployment": "node scripts/verify-deployment.js",
    "verify-deployment:local": "node scripts/verify-deployment.js http://localhost:4173",
    "test:waveform-screenshot": "node scripts/test-waveform-screenshot.js",
    "test:waveform-screenshot:local": "node scripts/test-waveform-screenshot.js http://localhost:8081/wavlpf/"
  },
  "keywords": [
    "synthesizer",
    "audio",
    "lpf",
    "tone.js"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cat-oscilloscope": "git+https://github.com/cat2151/cat-oscilloscope.git",
    "tone": "^14.7.77"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/ui": "^4.0.16",
    "happy-dom": "^20.0.11",
    "playwright": "^1.57.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
